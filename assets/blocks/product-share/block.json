{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "digicommerce/product-share",
    "title": "Product Share",
    "category": "digicommerce",
    "description": "Display social sharing buttons for the current product.",
    "keywords": ["product", "share", "social", "facebook", "twitter"],
    "textdomain": "digicommerce",
    "attributes": {
        "showTitle": {
            "type": "boolean",
            "default": true
        },
        "title": {
            "type": "string",
            "default": ""
        },
        "platforms": {
            "type": "array",
            "default": ["facebook", "twitter", "pinterest", "email"]
        },
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--50)"
                    }
                }
            }
        }
    },
    "usesContext": ["postId", "postType"],
    "supports": {
        "anchor": true,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true,
            "__experimentalDefaultControls": {
                "margin": true
            }
        },
        "typography": {
            "textAlign": true
        },
        "color": {
            "text": true,
            "background": true,
            "gradients": true
        },
        "__experimentalBorder": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        }
    },
    "example": {
        "attributes": {
            "showTitle": true,
            "platforms": ["facebook", "twitter", "pinterest", "email"]
        }
    },
    "style": "file:./style.css",
    "editorStyle": "file:./style.css"
}
